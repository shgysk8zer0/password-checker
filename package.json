{
  "name": "password-checker",
  "version": "1.0.2",
  "private": true,
  "description": "Checks passwords against have i been pwned",
  "config": {
    "serve": {
      "domain": "localhost",
      "path": "./",
      "port": 8000
    },
    "dir": {
      "css": "css/",
      "js": "js/",
      "img": "img/",
      "html": "./"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shgysk8zer0/password-checker.git"
  },
  "keywords": [
    "passwords",
    "security",
    "have-i-been-pwned"
  ],
  "author": "Chris Zuber <shgysk8zer0@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shgysk8zer0/password-checker/issues"
  },
  "homepage": "https://github.com/shgysk8zer0/password-checker#readme",
  "scripts": {
    "preinstall": "git submodule update --recursive --init",
    "postinstall": "npm run build:icons",
    "start": "http-server ${npm_package_config_serve_path} -p ${npm_package_config_serve_port} -a ${npm_package_config_serve_domain} -o",
    "test": "npm run lint:js && npm run lint:css",
    "fix": "npm run fix:js && npm run fix:css",
    "build": "npm run build:icons",
    "build:icons": "svg-sprite-generate -c img/icons.csv -o img/icons.svg",
    "lint:css": "stylelint ${npm_package_config_dir_css}",
    "lint:js": "eslint ${npm_package_config_dir_js}",
    "fix:css": "stylelint ${npm_package_config_dir_css} --fix",
    "fix:js": "eslint ${npm_package_config_dir_js} --fix"
  },
  "dependencies": {
    "netlify-js-app": "^1.0.13"
  }
}
